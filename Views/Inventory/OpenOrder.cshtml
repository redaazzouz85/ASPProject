@model ASPProject.Models.CartOrder

@{
    ViewBag.Title = "OpenOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row">

        <!-- BEGIN INVOICE -->
        <div class="col-xs-12">
            <div class="grid invoice">

                <div class="grid-body">
                    @using (Html.BeginForm("Fulfill", "Inventory", FormMethod.Post))
                    {
                        <input hidden name="FullName" value="@Model.FullName" />
                        <input hidden name="Email" value="@Model.Email" />
                        <input hidden name="Address" value="@Model.Address" />
                        <input hidden name="PhoneNumber" value="@Model.PhoneNumber" />
                        <input hidden name="CartId" value="@Model.CartItemList[0].CartId" />
                        <input hidden name="DateOrder" value="@Model.DateOrder" />

                        <div class="invoice-title">

                            <div class="row">
                                <div class="col-xs-12">
                                    <img src="http://vergo-kertas.herokuapp.com/assets/img/logo.png" alt="" height="35">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-xs-12">
                                    <h2>
                                        invoice #<br>
                                        <span class="small">@Model.Id</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-xs-6">
                                <address>
                                    <strong>Billed To:</strong><br>
                                    @Model.FullName. <br>
                                    @Model.Address<br>
                                    @Model.Email<br>

                                    <abbr title="Phone">P:</abbr> @Model.PhoneNumber
                                </address>
                            </div>
                            <div class="col-xs-6 text-right">

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">

                            </div>
                            <div class="col-xs-6 text-right">
                                <address>
                                    <strong>Order Date:</strong><br>
                                    @Model.DateOrder
                                </address>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <h3>ORDER SUMMARY</h3>
                                <table class="table table-striped">
                                    <thead>
                                        <tr class="line">

                                            <td class="text-left"><strong>Image</strong></td>
                                            <td class="text-left"><strong>Title</strong></td>
                                            <td class="text-center"><strong>Quantity</strong></td>
                                            <td class="text-center"><strong>Price/Unit</strong></td>
                                            <td class="text-center"><strong>SUBTOTAL</strong></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{

                                            var i = 1;
                                            foreach (var item in Model.CartItemList)
                                            {
                                                var subTotal = item.Quantity * item.Product.Price;

                                                <tr>


                                                    <td>
                                                        <img src="@Url.Content(item.Product.Image)" class="rounded-circle" width="100" height="100" asp-append-version="true" />
                                                    </td>
                                                    <td><strong>@item.Product.Name</strong></td>
                                                    <td class="text-center">@item.Quantity</td>
                                                    <td class="text-center"><span><strong>$</strong></span>@item.Product.Price</td>
                                                    <td class="text-center"><span><strong>$</strong></span>@subTotal</td>
                                                </tr>
                                                i++;


                                            }



                                        }

                                    </tbody>
                                </table>
                            </div>


                        </div>


                        <div class="row">
                            <div class="col-md-12 text-right identity">
                                <p><strong>Total</strong><br><span>$</span> @Model.Total</p>
                            </div>
                        </div>
                        <input hidden name="id" value="@Model.Id" />
                        <div class="row">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Fulfill order</button>
                        </div>
                        <div class="row">
                            @Html.ActionLink("Back to orders", "Orders", null, new { @class = "btn btn-primary", @style = "width:200px; margin-top:25px; font-size: 18px" })

                        </div>
                    }
                    @{
                        if (ViewBag.Message != null)
                        {
                            <div class="label label-info">
                                <p>@ViewBag.Message</p>
                            </div>
                        }

                    }
                </div>
            </div>

            <!-- END INVOICE -->
        </div>
    </div>

